{
    "name": "echo-condition-argo",
    "driver": "argo",
    "inputs": {
        "condValue": "boolean",
        "hello1": "string"
    },
    "outputs": {
        "echoStdOut": {
            "type": "File",
            "outputSource": "echo/echoStdOut"
        },
        "echoStdErr": {
            "type": "File",
            "outputSource": "echo/echoStdErr"
        }
    },
    "cwlJobInputs": {
        "condValue": false,
        "hello1": "hello kevin"
    },
    "steps": {
        "echo": {
            "run": "plugin:echo:0.0.1",
            "in": {
                "message": "hello1",
                "condValue": "condValue"
            },
            "out": [
                "echoStdOut",
                "echoStdErr"
            ],
            "when": "$(inputs.condValue)"
        }
    }
}