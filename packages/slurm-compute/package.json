{
  "name": "slurm-compute",
  "version": "0.1.0",
  "private": true,
  "contributors": "https://github.com/LabShare/slurm-compute/graphs/contributors",
  "description": "Slurm-Compute Driver",
  "repository": {
    "type": "git",
    "url": "https://github.com/LabShare/slurm-compute.git"
  },
  "bugs": {
    "url": "https://github.com/LabShare/slurm-compute/issues"
  },
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "lsc": {
    "loopbackApi": {
      "name": "slurm-compute"
    }
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "npm run pretest && lb-mocha --allow-console-logs \"dist/__tests__\"",
    "test:unit": "npm run pretest && lb-mocha --allow-console-logs \"dist/__tests__/unit\"",
    "posttest": "npm run lint",
    "migrate": "node ./dist/migrate",
    "coverage": "nyc npm run test",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "prepublishOnly": "npm run test",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "extends": "@labshare/semantic-release-config",
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md}": "npm run lint:fix"
  },
  "author": "LabShare",
  "license": "MIT",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@labshare/services-auth": "^3.3.1",
    "@labshare/services-cache": "^2.1.1",
    "@labshare/services-logger": "^1.1.6",
    "@labshare/services-notifications": "^1.0.2",
    "@loopback/boot": "^2.0.1",
    "@loopback/context": "^3.1.0",
    "@loopback/core": "^2.1.0",
    "@loopback/openapi-v3": "^3.1.0",
    "@loopback/repository": "^2.0.1",
    "@loopback/rest": "^3.0.1",
    "@loopback/rest-explorer": "^4.1.1",
    "@loopback/service-proxy": "^2.0.1",
    "config": "^3.3.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "p-event": "^4.1.0",
    "snyk": "^1.305.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@labshare/semantic-release-config": "^1.1.2",
    "@loopback/build": "^8.1.1",
    "@loopback/eslint-config": "^12.0.3",
    "@loopback/testlab": "^4.1.1",
    "@types/express": "^4.17.4",
    "@types/node": "^10.17.17",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.3.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "nyc": "^15.0.1",
    "semantic-release": "^19.0.2",
    "source-map-support": "^0.5.16",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.5"
  },
  "snyk": true
}
