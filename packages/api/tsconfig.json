{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2020",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*", "tests"],
	"exclude": ["node_modules", "**/*.spec.ts", "tests/**/*"],
	"references": [
		{
			"path": "../common"
		}
	]
}
