{
  "name": "@polusai/slurm-compute",
  "version": "0.1.0",
  "private": true,
  "description": "Slurm-Compute Driver",
  "main": "index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node ./index.ts",
    "start:dev": "ts-node-dev --watch .env, src ./index.ts",
    "test": "npm run pretest && lb-mocha --allow-console-logs \"dist/__tests__\"",
    "test:unit": "npm run pretest && lb-mocha --allow-console-logs \"dist/__tests__/unit\"",
    "posttest": "npm run lint",
    "migrate": "node ./dist/migrate",
    "coverage": "nyc npm run test",
    "prepublishOnly": "npm run test"
  },
  "license": "MIT",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@polusai/compute-common": "*",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "tslib": "^2.6.2",
    "axios": "1.6.0",
    "express-jwt": "^8.4.1",
    "jwks-rsa": "^3.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "@types/cors": "^2.8.14",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.5.2"
  }
}